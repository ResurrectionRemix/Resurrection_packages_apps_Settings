<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/status_bar_title">

    <PreferenceCategory
        android:key="clock"
        android:title="@string/clock_category" >

    <PreferenceScreen
        android:key="clock"
        android:title="@string/clock_custom"
	android:fragment="com.android.settings.rr.ClockSettings" />

 </PreferenceCategory>

    <PreferenceCategory
        android:key="battery"
        android:title="@string/battery_category" >

    <ListPreference
        android:key="status_bar_battery_style"
        android:title="@string/status_bar_battery_style_title"
        android:dialogTitle="@string/status_bar_battery_style_title"
        android:entries="@array/status_bar_battery_style_entries"
        android:entryValues="@array/status_bar_battery_style_values" />

    <ListPreference
        android:key="status_bar_show_battery_percent"
        android:title="@string/status_bar_battery_percentage_title"
        android:dialogTitle="@string/status_bar_battery_percentage_title"
        android:entries="@array/status_bar_battery_percentage_entries"
        android:entryValues="@array/status_bar_battery_percentage_values" />


       <!-- Bettery Bar -->
        <PreferenceScreen
            android:key="battery_bar"
            android:fragment="com.android.settings.rr.BatteryBar"
            android:title="@string/battery_bar"       
            />
     </PreferenceCategory>



    <PreferenceCategory
        android:key="icons"
        android:title="@string/icons_category" >

    <PreferenceScreen
        android:key="status_bar_icons"
        android:title="@string/status_bar_icons_title"
        android:summary="@string/status_bar_icons_summary">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.android.systemui"
            android:targetClass="com.android.systemui.tuner.TunerActivity$StatusBarIconActivity" />
    </PreferenceScreen>

     <PreferenceScreen
        android:key="status_bar_colors"
	android:fragment="com.android.settings.rr.StatusBarColors"
        android:title="@string/status_bar_colors_title" 
        android:summary="@string/status_bar_colors_summary"/>

    <PreferenceScreen
           android:key="carrierlabel"
           android:title="@string/carrier_options"
	   android:summary="@string/carrierlabel_summary"
	   android:fragment="com.android.settings.rr.CarrierLabel"  />

    <PreferenceScreen
           android:key="network_traffic_settings"
           android:title="@string/network_traffic_title"
	   android:summary="@string/network_traffic_settings_summary"
           android:fragment="com.android.settings.rr.NetworkTrafficSettings" />

     <PreferenceScreen
            android:key="rr_logo"
            android:fragment="com.android.settings.rr.fragments.Logo"
            android:summary="@string/rr_logo_summary"
            android:title="@string/status_bar_logo" />


     <PreferenceScreen
            android:key="rr_custom_logo"
            android:fragment="com.android.settings.rr.fragments.CustomLogo"
	    android:summary="@string/rr_custom_logo_summary"
            android:title="@string/sb_custom_logos" />

      <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
    	   android:key="bluetooth_show_battery"
           android:title="@string/bluetooth_battery_title"
           android:summary="@string/bluetooth_battery_summary"
           android:defaultValue="false" />

    <!-- Headset icon switch -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="show_headset_icon"
        android:title="@string/show_headset_icon_title"
        android:summary="@string/show_headset_icon_summary"
        android:defaultValue="true" />

      </PreferenceCategory>

    <PreferenceCategory
        android:key="weather"
        android:title="@string/weather_category" >

     <PreferenceScreen
        android:key="statusbar_weather"
	android:fragment="com.android.settings.rr.StatusBarWeather"
        android:title="@string/status_bar_temperature_title" />

     </PreferenceCategory>

    <PreferenceCategory
        android:key="misc"
        android:title="@string/misc_category" >


     <com.android.settings.cyanogenmod.CMSystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />

     <com.android.settings.cyanogenmod.CMSystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />

     <com.android.settings.cyanogenmod.CMSystemSettingSwitchPreference
                android:key="double_tap_sleep_gesture"
                android:title="@string/double_tap_to_sleep_title"
                android:summary="@string/double_tap_to_sleep_summary"
                android:defaultValue="true" />



    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="show_su_indicator"
        android:title="@string/su_indicator"
        android:summaryOn="@string/su_indicator_summary_on"
        android:summaryOff="@string/su_indicator_summary_off"
        android:defaultValue="true" />

        <SwitchPreference
            android:key="show_fourg"
            android:title="@string/show_fourg_title"
            android:summary="@string/show_fourg_summary"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="show_threeg"
            android:title="@string/show_threeg_title"
            android:summary="@string/show_threeg_summary"
            android:defaultValue="false" />

     </PreferenceCategory>
     <PreferenceCategory
        android:key="breathing_notifications_category"
        android:title="@string/breathing_notifications_category" />

     <PreferenceScreen
        android:key="breathing_notif"
	android:title="@string/breathing_category"
        android:fragment="com.android.settings.rr.BreathingNotification" />

</PreferenceScreen>

