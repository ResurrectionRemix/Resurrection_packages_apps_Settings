<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/pie_control_trigger_positions"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        style="?android:preferenceInformationStyle"
        android:title="@string/pie_trigger_note_title"
        android:summary="@string/pie_trigger_note_summary"
        android:selectable="false" />

    <PreferenceCategory
        android:title="@string/pie_control_trigger_positions">

        <SwitchPreference
            android:key="pie_control_trigger_bottom"
            android:title="@string/pie_control_trigger_bottom"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="pie_control_trigger_left"
            android:title="@string/pie_control_trigger_left"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="pie_control_trigger_right"
            android:title="@string/pie_control_trigger_right"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="pie_control_trigger_top"
            android:title="@string/pie_control_trigger_top"
            android:summary="@string/pie_control_trigger_top_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/additional_options_title">

        <SwitchPreference
            android:key="pie_disable_ime_triggers"
            android:title="@string/pie_disable_ime_triggers_title"
            android:summary="@string/pie_disable_ime_triggers_summary"
            android:defaultValue="true" />

        <com.android.settings.widget.SeekBarPreferenceCham
            android:key="pie_trigger_sensitivity"
            android:title="@string/pie_trigger_sensitivity_title"
            android:summary="@string/pie_trigger_sensitivity_summary"
            android:max="10"
            android:defaultValue="10" />

   </PreferenceCategory>

</PreferenceScreen>
