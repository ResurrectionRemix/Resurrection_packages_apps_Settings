<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/pie_button_style">

    <PreferenceCategory
        android:title="@string/pie_button_style">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="pie_button_color"
             android:title="@string/pie_button_color_title"
             android:defaultValue="0xff0099cc" />

        <SlimSeekBarPreference
             android:key="pie_button_alpha"
             android:title="@string/pie_button_alpha_title" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="pie_button_outline_color"
             android:title="@string/pie_button_outline_color_title"
             android:defaultValue="0xff0099cc" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="pie_button_pressed_color"
             android:title="@string/pie_button_pressed_color_title"
             android:defaultValue="0xff33b5e5" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="pie_button_long_pressed_color"
             android:title="@string/pie_button_long_pressed_color_title"
             android:defaultValue="0xff8ad5f0" />

        <SlimSeekBarPreference
             android:key="pie_button_pressed_alpha"
             android:title="@string/pie_button_pressed_alpha_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pie_icon_style">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="pie_icon_color"
             android:title="@string/pie_icon_color_title"
             android:defaultValue="0xffffffff" />

        <ListPreference
             android:key="pie_icon_color_mode"
             android:entries="@array/icon_color_mode_entries"
             android:entryValues="@array/icon_color_mode_values"
             android:title="@string/pie_icon_color_mode_title"
             android:dialogTitle="@string/pie_icon_color_mode_dialog_title"
             android:summary="@string/pie_icon_color_mode_summary" />

    </PreferenceCategory>

</PreferenceScreen>
