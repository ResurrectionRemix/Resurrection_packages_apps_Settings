<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/gestures_settings" >

        <!-- Gesture anywhere -->
        <PreferenceScreen
	    	android:id="@+id/gesture_anywhere"	
            android:key="gesture_anywhere"
            android:fragment="com.android.settings.rr.gestureanywhere.GestureAnywhereSettings"
            android:title="@string/gesture_anywhere_title"
            android:summary="@string/gesture_anywhere_summary"
			android:icon="@drawable/rr_gesture_anywhere_icon" />


        <!-- App Circle Bar -->
        <PreferenceScreen
            android:key="app_circle_bar"
            android:fragment="com.android.settings.rr.AppCircleBar"
            android:title="@string/app_circle_bar_title"
            android:summary="@string/app_circle_bar_summary"
            android:icon="@drawable/rr_appcirclebar_icon" />

       <PreferenceScreen
            android:key="pa_pie_control"
            android:title="@string/pa_pie_control_title"
            android:summary="@string/pa_pie_control_summary"
            android:fragment="com.android.settings.rr.pie.PieSettings"
            android:icon="@drawable/rr_pie_icon" />

       <!-- Three-fingers-swipe to screenshot -->
       <com.android.settings.rr.Preferences.SystemSettingSwitchPreference
            android:key="three_finger_gesture"
            android:title="@string/three_finger_gesture"
            android:summary="@string/three_finger_gesture_summary"
            android:defaultValue="false"
            android:icon="@drawable/rr_three_finger_gesture_icon" />

</PreferenceScreen>

