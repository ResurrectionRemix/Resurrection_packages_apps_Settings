<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/carrier_title">

        <ListPreference
            android:key="status_bar_carrier"
            android:title="@string/show_carrier_title"
            android:dialogTitle="@string/show_carrier_title"
            android:entries="@array/carrier_label_entries"
            android:entryValues="@array/carrier_label_values" />

        <PreferenceScreen
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title"
            android:dependency="status_bar_carrier" />

        <ListPreference
            android:key="status_bar_carrier_font_style"
            android:entries="@array/status_bar_weather_font_style_entries"
            android:dialogTitle="@string/status_bar_carrier_font_style_title"
            android:entryValues="@array/status_bar_weather_font_style_values"
            android:title="@string/status_bar_carrier_font_style_title"
            android:defaultValue="0" />

        <com.android.settings.rr.SeekBarPreference
            android:key="status_bar_carrier_font_size"
            android:title="@string/status_bar_carrier_size"
            settings:maximum="23"
            settings:minimum="4"
            settings:defaultVal="14"
            settings:units="dp" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="status_bar_carrier_color"
            android:title="@string/status_bar_carrier_color"
            android:dependency="status_bar_carrier"
            android:defaultValue="0xffffffff" />

        <com.android.settings.rr.Preferences.SystemSettingSwitchPreference
            android:key="hide_carrier_max_switch"
            android:title="@string/carrier_label_hide_label_title"
            android:dependency="status_bar_carrier" />

          <com.android.settings.rr.SeekBarPreference
            android:key="hide_carrier_max_notification"
            android:title="@string/carrier_label_number_of_notification_icons_title"
            settings:maximum="6"
            settings:minimum="1"
            settings:units=""
            android:dependency="hide_carrier_max_switch" />

</PreferenceScreen>

