<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/rr_misc_title" >

    <PreferenceCategory
        android:key="misc_1"
        android:title="@string/misc_1" >

    <!-- SELinux -->
        <Preference
            android:key="selinux_switch"
            android:title="@string/selinux_switch_title"
            android:summary="@string/selinux_switch_summary"
            android:selectable="false"/>

        <SwitchPreference
            android:key="selinux"
            android:title="@string/selinux_title"
            android:defaultValue="false" />
</PreferenceCategory>


    <PreferenceCategory
        android:key="misc_2"
        android:title="@string/misc_2" >

    <PreferenceScreen
        android:key="dashboard_colors"
        android:title="@string/db_colors" 
	android:fragment="com.android.settings.rr.DashBoardColors"/>

     <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="headset_connect_player"
        android:title="@string/headset_connect_player_title"
        android:summary="@string/headset_connect_player_summary"
        android:defaultValue="false" />
     
       
    <SwitchPreference
        android:key="doze_powersave"
        android:title="@string/doze_powersave_title"
        android:summary="@string/doze_powersave_summary" />



   <Preference android:key="restart_systemui"
        android:title="@string/restart_systemui" />

        <!-- Weather Settings -->
       <Preference
           android:id="@+id/weather_settings"
           android:title="@string/weather_settings_title">
           <intent
               android:action="android.intent.action.MAIN"
               android:targetClass="com.cyanogenmod.lockclock.preference.Preferences"
               android:targetPackage="com.cyanogenmod.lockclock" >
               <extra android:name=":android:show_fragment"
                   android:value="com.cyanogenmod.lockclock.preference.WeatherPreferences" />
           </intent>
       </Preference>



</PreferenceCategory>

     <PreferenceCategory
            android:key="screenshot_category"
            android:title="@string/screenshot_cat_title">

        <SwitchPreference
            android:key="screenshot_crop_and_share"
            android:title="@string/screenshot_crop_and_share_title"
            android:summary="@string/screenshot_crop_and_share_summary"
            android:defaultValue="false" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="screenshot_crop_behavior"
            android:title="@string/screenshot_crop_behavior_title"
            android:summary="@string/screenshot_crop_behavior_summary"
            android:defaultValue="false" />

    </PreferenceCategory>


    <PreferenceCategory
        android:key="misc_4"
        android:title="@string/misc_4" >

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="fingerprint_success_vib"
        android:title="@string/fprint_sucess_vib_title"
        android:summary="@string/fprint_sucess_vib_summary"
        android:defaultValue="true" />


</PreferenceCategory>


    <PreferenceCategory
        android:key="misc_3"
        android:title="@string/misc_3" >

     <!-- Ad Blocker -->
        <Preference
             android:title="@string/adaway_settings_title">
             <intent
                 android:action="android.intent.action.MAIN"
                 android:targetPackage="org.adaway"
                 android:targetClass="org.adaway.ui.BaseActivity" />
        </Preference>


    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="disable_fc_notifications"
        android:title="@string/disable_fc_notifications_title"
        android:summary="@string/disable_fc_notifications_summary"
        android:defaultValue="false" />


        <!-- Wakelock blocker -->
        <PreferenceScreen
            android:key="wakelock_blocker"
            android:fragment="com.android.settings.rr.WakeLockBlocker"
            android:title="@string/wakelock_blocker_title"
            />

     <!-- System APP Remover -->
    <PreferenceScreen
            android:id="@+id/system_app_remover"
            android:title="@string/system_app_remover"
            android:fragment="com.android.settings.rr.fragments.SystemappRemover" />


        <!-- Advanced options -->
        <PreferenceScreen
                android:key="advanced_sound_settings"
                android:title="@string/advanced_sound_title"
                android:persistent="false"
                android:fragment="com.android.settings.slim.SoundSettings" />

</PreferenceCategory>


</PreferenceScreen>
