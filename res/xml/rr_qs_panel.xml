<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/rr_qs_title">

        <PreferenceScreen
            android:key="rr_qs_animations"
            android:fragment="com.android.settings.rr.QsAnimations"
            android:title="@string/rr_qs_animation"
			android:icon="@drawable/rr_qs_animations_icon"
            />

        <PreferenceScreen
            android:key="rr_qs_pulldown"
            android:fragment="com.android.settings.rr.QsPullDown"
            android:title="@string/rr_qs_pulldown"
			android:icon="@drawable/rr_qs_pulldown_icon"
            />

        <PreferenceScreen
            android:key="rr_qs_layout"
            android:fragment="com.android.settings.rr.QsLayout"
            android:title="@string/qs_tile_layout"
			android:icon="@drawable/rr_qs_layout_icon"
            />

        <com.android.settings.rr.Preferences.SecureSettingSwitchPreference
            android:key="quick_settings_vibrate"
            android:title="@string/quick_settings_vibrate_title"
            android:summary="@string/quick_settings_vibrate_summary"
            android:defaultValue="false"/>

        <com.android.settings.rr.Preferences.SecureSettingSwitchPreference
            android:key="qs_data_advanced"
            android:title="@string/qs_advanced_data_title"
            android:summary="@string/qs_advanced_data_summary"
            android:defaultValue="false" />

        <com.android.settings.rr.Preferences.SystemSettingSwitchPreference
       		android:key="qs_show_brightness_icon"
        	android:title="@string/brightness_icon_title"
        	android:summary="@string/brightness_icon_summary"
        	android:defaultValue="false"/>

        <com.android.settings.rr.Preferences.SecureSettingSwitchPreference
            android:key="qs_wifi_easy_toggle"
            android:title="@string/qs_wifi_easy_toggle_title"
            android:summary="@string/qs_wifi_easy_toggle_summary"
            android:defaultValue="false" />

        <com.android.settings.rr.Preferences.SecureSettingSwitchPreference
            android:key="qs_bt_easy_toggle"
            android:title="@string/qs_bt_easy_toggle_title"
            android:summary="@string/qs_bt_easy_toggle_summary"
            android:defaultValue="false" />

</PreferenceScreen>
