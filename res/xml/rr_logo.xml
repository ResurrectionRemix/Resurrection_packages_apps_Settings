<PreferenceScreen
    android:title="@string/status_bar_logo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_rr_logo"
            android:title="@string/status_bar_rr_logo_title"
            android:summary="@string/status_bar_rr_logo_summary" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="status_bar_rr_logo_color"
            android:title="@string/status_bar_rr_logo_color"
            android:defaultValue="0xffffffff"
            android:dependency="status_bar_rr_logo" />

    <ListPreference
           android:key="status_bar_rr_logo_style"
           android:title="@string/status_bar_rr_logo_position"
           android:dialogTitle="@string/status_bar_rr_logo_position"
           android:entries="@array/status_bar_logo_position_entries"
           android:entryValues="@array/status_bar_logo_position_values"
           android:dependency="status_bar_rr_logo" />

</PreferenceScreen>

