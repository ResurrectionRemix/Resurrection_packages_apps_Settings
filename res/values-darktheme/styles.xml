<resources>

		<style name="Theme.SettingsBase" parent="@android:style/Theme.Material" >
			<item name="android:textColor">@color/midnight_white</item>
		    <item name="android:colorEdgeEffect">@color/midnight_theme</item>
            <item name="android:colorAccent">@color/midnight_theme</item>
		    <item name="android:colorControlHighlight">@color/midnight_theme</item>
			<item name="android:textColorPrimary">@color/midnight_white</item>
			<item name="android:textColorSecondary">@color/midnight_text</item>
            <item name="android:colorPrimaryDark">@color/pb_sb</item>
            <item name="android:colorPrimary">@color/pb_ab</item>
			<item name="android:windowBackground">@color/midnight_primary</item>
			<item name="android:navigationBarColor">@color/midnight_primary</item>
		</style>

    <style name="Theme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:icon">@color/midnight_transparent</item>
        <item name="android:background">@color/pb_ab</item>
    </style>        

    <style name="Theme.SubSettings" parent="@style/Theme.SettingsBase" >
        <item name="android:windowBackground">@color/midnight_primary</item>
        <item name="android:navigationBarColor">@color/midnight_primary</item>
        <item name="android:colorPrimaryDark">@color/pb_sb</item>
        <item name="android:colorPrimary">@color/pb_ab</item>
		<item name="android:textColorPrimary">@color/midnight_white</item>
		<item name="android:textColorSecondary">@color/midnight_text</item>
    </style>
	<style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.SettingsBase" >
        <item name="android:windowBackground">@color/midnight_primary</item>
        <item name="android:navigationBarColor">@color/midnight_primary</item>
        <item name="android:colorPrimaryDark">@color/pb_sb</item>
        <item name="android:colorPrimary">@color/pb_ab</item>
    </style>
    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge" >
        <item name="android:colorAccent">@color/midnight_theme</item>
    </style>

	<style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert" >		
        <item name="android:colorAccent">@color/midnight_theme</item>
    </style>
        
    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Material.Medium" />
    <style name="TextAppearance.Switch" parent="@style/TextAppearance.Medium" />
    <style name="TextAppearance.CategoryTitle" parent="@android:style/TextAppearance.Material.Small">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/midnight_text</item>
    </style>


	

    <style name="wifi_item_label">
        <item name="android:textColor">@color/midnight_white</item>
    </style>
    <style name="wifi_item_content">
