    </style>
    <style name="wifi_item_edit_content">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
	<style name="bt_item">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
    <style name="bt_item_label">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
    <style name="bt_item_edit_content">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
